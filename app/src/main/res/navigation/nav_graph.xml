<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/pokeListFragment">

    <fragment
        android:id="@+id/pokeListFragment"
        android:name="com.example.pokemontest.ui.pokelist.PokeListFragment"
        android:label="@string/tv_title_poke_list"
        tools:layout="@layout/fragment_poke_list">
        <action
            android:id="@+id/action_slashFragment_to_characterListFragment"
            app:destination="@id/pokeDetailFragment"
            app:popUpTo="@+id/pokeDetailFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/pokeDetailFragment"
        android:name="com.example.pokemontest.ui.pokedetail.PokeDetailFrafment"
        android:label="@string/tv_title_poke_detail"
        tools:layout="@layout/fragment_poke_detail">
        <argument
            android:name="domainMovie"
            app:argType="com.example.movieappv4.domain.model.DomainMovie" />
    </fragment>

</navigation>
